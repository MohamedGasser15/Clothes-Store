@using Clothes_Models.ViewModels
@model RegisterViewModel

<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Register</h2>
                <form method="post" asp-controller="Account" asp-action="Register" class="register-form" id="register-form">
                    <div asp-validation-summary="All" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="Name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Name" type="text" name="name" id="name" placeholder="Your Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Email" id="email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" id="pass" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" id="re_pass" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                    <div class="form-group form-button">
                        <button type="submit" id="signup" class="form-submit">Register</button>
                    </div>

                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/img/signup-image.jpg" alt="sing up image"></figure>
                <a asp-action="Login" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}