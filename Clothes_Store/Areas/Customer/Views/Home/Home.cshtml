    /* Notification styles */
    .notification-container {
    position: fixed;
    top: 1.5rem;
    right: 1.5rem;
    z-index: 1000;
    }

    .notification {
    padding: 1rem 1.5rem;
    color: white;
    border-radius: 0.75rem;
