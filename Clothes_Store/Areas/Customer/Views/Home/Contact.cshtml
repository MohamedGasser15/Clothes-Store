<style>
    @@keyframes gradient-flow {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .animate-gradient-flow {
        animation: gradient-flow 15s ease infinite;
    }

    .floating-label {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .form-input:focus ~ .floating-label,
    .form-input:not(:placeholder-shown) ~ .floating-label {
        top: -10px;
        left: 0.8rem;
        font-size: 0.75rem;
        color: #088178;
    }

    .particle-network {
        background-image: radial-gradient(circle at center, #e8f6ea 1px, transparent 1px);
        background-size: 20px 20px;
        mask-image: radial-gradient(circle at center, black 10%, transparent 100%);
    }

    .social-card {
        position: relative;
        overflow: hidden;
    }

        .social-card::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(8, 129, 120, 0.1);
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .social-card:hover::after {
            width: 150%;
            height: 150%;
            top: -25%;
            left: -25%;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add intersection observer for scroll animations
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in-up');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.form-group, .social-card, .map-container').forEach(el => {
            observer.observe(el);
        });

        // Form validation
        const form = document.querySelector('form');
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            // Add custom validation logic here
        });

        // Add hover effect to newsletter section
        const newsletter = document.querySelector('#newsletter');
        newsletter.addEventListener('mousemove', (e) => {
            const rect = newsletter.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            newsletter.style.setProperty('--mouse-x', `${x}px`);
            newsletter.style.setProperty('--mouse-y', `${y}px`);
        });
    });
</script>