@model ErrorViewModel
@{
    Layout = null;
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - LushThreads</title>
    <style>
        :root {
            --primary-color: #088178;
            --error-color: #ef4444;
            --accent-color: #FFD700;
            --text-dark: #1a1a1a;
            --text-medium: #454545;
            --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            line-height: 1.5;
            color: var(--text-dark);
        }

        .error-container {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(16px);
            border-radius: 2rem;
            padding: 4rem 3rem;
            max-width: 720px;
            width: 90%;
            text-align: center;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(8, 129, 120, 0.15);
            transform: translateY(20px);
            opacity: 0;
            animation: slideIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.3s forwards;
        }

        .error-decoration {
            position: absolute;
            background: linear-gradient(45deg, var(--primary-color), rgba(8, 129, 120, 0.1));
            opacity: 0.1;
            filter: blur(40px);
            border-radius: 50%;
        }

        .decoration-1 {
            width: 200px;
            height: 200px;
            top: -50px;
            left: -50px;
            animation: float 8s infinite ease-in-out;
        }

        .decoration-2 {
            width: 150px;
            height: 150px;
            bottom: -30px;
            right: -30px;
            animation: float 8s 2s infinite ease-in-out;
        }

        .error-icon {
            font-size: 4.5rem;
            color: var(--error-color);
            margin-bottom: 2rem;
            display: inline-block;
            transform: scale(0) rotate(-15deg);
            animation: iconEntrance 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.5s forwards;
            position: relative;
            z-index: 2;
        }

        .error-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1.25rem;
            letter-spacing: -0.025em;
            color: var(--text-dark);
            opacity: 0;
            transform: translateY(10px);
            animation: fadeUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.7s forwards;
            position: relative;
            z-index: 2;
        }

        .error-message {
            font-size: 1.125rem;
            color: var(--text-medium);
            margin-bottom: 2.5rem;
            opacity: 0;
            transform: translateY(10px);
            animation: fadeUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.9s forwards;
            position: relative;
            z-index: 2;
        }

        .request-id {
            background: rgba(8, 129, 120, 0.05);
            padding: 1rem;
            border-radius: 1rem;
            font-family: 'Menlo', monospace;
            font-size: 0.875rem;
            color: var(--text-medium);
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(10px);
            animation: fadeUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 1.1s forwards;
            border: 1px dashed rgba(8, 129, 120, 0.2);
            position: relative;
            z-index: 2;
        }

        .btn-home {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 1.25rem 2.5rem;
            background: var(--primary-color);
            color: white;
            font-weight: 600;
            border-radius: 1rem;
            text-decoration: none;
            transition: var(--transition);
            opacity: 0;
            transform: translateY(10px);
            animation: fadeUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) 1.3s forwards;
            box-shadow: 0 4px 6px rgba(8, 129, 120, 0.1);
            position: relative;
            z-index: 2;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

            .btn-home:hover {
                background: #066156;
                transform: translateY(-3px) scale(1.02);
                box-shadow: 0 8px 20px rgba(8, 129, 120, 0.2);
            }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes iconEntrance {
            0%

        {
            transform: scale(0) rotate(-15deg);
        }

        70% {
            transform: scale(1.1) rotate(5deg);
        }

        100% {
            transform: scale(1) rotate(0);
        }

        }

        @@keyframes fadeUp {
            to

        {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(5deg);
        }

        }

        @@media (max-width: 768px) {
            .error-container

        {
            padding: 2.5rem 1.5rem;
            border-radius: 1.5rem;
        }

        .error-title {
            font-size: 2rem;
        }

        .error-icon {
            font-size: 3.5rem;
        }

        .btn-home {
            padding: 1rem 2rem;
            font-size: 0.875rem;
        }

        .decoration-1,
        .decoration-2 {
            display: none;
        }

        }

        @@media (prefers-reduced-motion: reduce) {
            *

        {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }

        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-decoration decoration-1"></div>
        <div class="error-decoration decoration-2"></div>

        <i class="fas fa-unlink error-icon" aria-hidden="true"></i>
        <h1 class="error-title">Connection Interrupted</h1>

        <p class="error-message">
            We've hit a snag in our digital threads. Our team is weaving a solution to get you back in style.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="request-id">
                <span class="sr-only">Request ID:</span>
                <code>@Model.RequestId</code>
            </div>
        }

        <a href="/" class="btn-home">
            <i class="fas fa-tshirt"></i>
            <span>Return to LushThreads</span>
        </a>
    </div>

    <script src="https://kit.fontawesome.com/87ba71bd3b.js" crossorigin="anonymous"></script>
</body>
</html>