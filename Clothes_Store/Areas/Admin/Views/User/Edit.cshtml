@using Clothes_Models.Models
@model ApplicationUser
@{
    var title = "Edit User";
    var actionText = "Update";
}

<div class="w-full sm:max-w-4xl sm:mx-auto py-0 sm:py-8 px-0 sm:px-6 lg:px-8">
    <form method="post" class="bg-white shadow-none sm:shadow-xl rounded-none sm:rounded-xl overflow-hidden min-h-screen sm:min-h-0">
        <input type="hidden" asp-for="Id" />

        <!-- Form Header -->
        <div class="bg-gradient-to-r from-primary to-primary-dark px-4 sm:px-6 py-3 sm:py-5 border-b border-gray-200">
            <h2 class="text-xl sm:text-2xl font-bold text-white">@title</h2>
        </div>

        <!-- Form Content -->
        <div class="p-4 sm:p-6 md:p-8">
            <div asp-validation-summary="ModelOnly" class="mb-3 sm:mb-4 p-3 sm:p-4 bg-red-50 border-l-4 border-red-500 text-red-700 text-sm sm:text-base">
                <i class="fas fa-exclamation-circle mr-2"></i> Please fix the errors below
            </div>

            <!-- Username Field -->
            <div class="mb-4 sm:mb-6">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1 sm:mb-2">
                    Username <span class="text-red-500">*</span>
                </label>
                <div class="relative rounded-md sm:rounded-lg border border-gray-300 sm:border-2">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-user text-gray-400 text-sm sm:text-base"></i>
                    </div>
                    <input asp-for="Name"
                           class="focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary block w-full pl-9 sm:pl-10 pr-3 py-2 sm:py-3 text-sm sm:text-base border-gray-300 rounded-md transition duration-150 ease-in-out"
                           placeholder="Enter username">
                </div>
                <span asp-validation-for="Name" class="mt-1 sm:mt-2 text-xs sm:text-sm text-red-600"></span>
            </div>

            <!-- Email Field -->
            <div class="mb-4 sm:mb-6">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1 sm:mb-2">
                    Email <span class="text-red-500">*</span>
                </label>
                <div class="relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-envelope text-gray-400 text-sm sm:text-base"></i>
                    </div>
                    <input asp-for="Email" readonly
                           class="focus:outline-none block w-full pl-9 sm:pl-10 pr-3 py-2 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-md bg-gray-50 sm:bg-gray-100"
                           placeholder="User email">
                </div>
                <span asp-validation-for="Email" class="mt-1 sm:mt-2 text-xs sm:text-sm text-red-600"></span>
            </div>

            <!-- Role Selection -->
            <div class="mb-4 sm:mb-6">
                <label asp-for="RoleId" class="block text-sm font-medium text-gray-700 mb-1 sm:mb-2">
                    User Role <span class="text-red-500">*</span>
                </label>
                <div class="relative border border-gray-300 sm:border-2 rounded-md shadow-sm">
                    <select asp-for="RoleId" asp-items="@Model.RoleList"
                            class="appearance-none focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary block w-full pl-3 pr-8 sm:pr-10 py-2 sm:py-3 text-sm sm:text-base border-gray-300 rounded-md transition duration-150 ease-in-out">
                        <option disabled selected>-- Select Role --</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <i class="fas fa-chevron-down text-xs sm:text-sm"></i>
                    </div>
                </div>
                <span asp-validation-for="RoleId" class="mt-1 sm:mt-2 text-xs sm:text-sm text-red-600"></span>
            </div>

            <!-- Form Actions -->
            <div class="mt-6 sm:mt-8 flex flex-col sm:flex-row justify-end gap-3 sm:gap-4">
                <a asp-action="Index" class="inline-flex items-center justify-center px-4 sm:px-6 py-2 sm:py-3 border border-gray-300 shadow-sm text-xs sm:text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none transition-all duration-200">
                    <i class="fas fa-arrow-left mr-1 sm:mr-2 text-xs sm:text-sm"></i> Back to List
                </a>
                <button type="submit" class="inline-flex items-center justify-center px-4 sm:px-6 py-2 sm:py-3 border border-transparent text-xs sm:text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-1 sm:focus:ring-2 focus:ring-offset-1 sm:focus:ring-offset-2 focus:ring-primary transition-all duration-200 transform hover:scale-[1.02] sm:hover:scale-105">
                    <i class="fas fa-save mr-1 sm:mr-2 text-xs sm:text-sm"></i> @actionText User
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Validation Scripts -->
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            // Add animation to form when loaded
            document.addEventListener('DOMContentLoaded', () => {
                const form = document.querySelector('form');
                form.classList.add('animate-fade-in-up');
            });
        </script>
        <style>
            .animate-fade-in-up {
                animation: fadeInUp 0.5s ease-out;
            }

            @@keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>
}