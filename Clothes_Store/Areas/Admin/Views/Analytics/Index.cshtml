@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-gray-900">Business Intelligence Center</h1>
        <p class="mt-2 text-lg text-gray-600">Comprehensive analytics for your e-commerce performance</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- User Analytics Card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <a asp-controller="Analytics" asp-action="UserDashboard" class="block group">
                <div class="p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-indigo-100 p-4 rounded-xl group-hover:bg-indigo-200 transition-colors duration-300">
                            <i class="fas fa-users text-indigo-600 text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-indigo-700 transition-colors duration-300">Customer Insights</h3>
                            <p class="mt-1 text-sm text-gray-500">User acquisition, retention, and behavior patterns</p>
                            <div class="mt-3 flex items-center text-sm text-indigo-600 font-medium">
                                Explore metrics
                                <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
                        <span class="text-xs text-gray-400">Updated: @DateTime.Now.ToString("MMM dd, h:mm tt")</span>
                        <span class="text-xs px-2 py-1 bg-indigo-50 text-indigo-600 rounded-full">Active</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Order Analytics Card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <a asp-controller="Analytics" asp-action="OrderDashboard" class="block group">
                <div class="p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-green-100 p-4 rounded-xl group-hover:bg-green-200 transition-colors duration-300">
                            <i class="fas fa-receipt text-green-600 text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-green-700 transition-colors duration-300">Sales Performance</h3>
                            <p class="mt-1 text-sm text-gray-500">Revenue trends, conversion rates, and order analytics</p>
                            <div class="mt-3 flex items-center text-sm text-green-600 font-medium">
                                View reports
                                <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
                        <span class="text-xs text-gray-400">Updated: @DateTime.Now.ToString("MMM dd, h:mm tt")</span>
                        <span class="text-xs px-2 py-1 bg-green-50 text-green-600 rounded-full">Live Data</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Product Analytics Card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <a asp-controller="Analytics" asp-action="ProductDashboard" class="block group">
                <div class="p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-blue-100 p-4 rounded-xl group-hover:bg-blue-200 transition-colors duration-300">
                            <i class="fas fa-tshirt text-blue-600 text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-blue-700 transition-colors duration-300">Product Intelligence</h3>
                            <p class="mt-1 text-sm text-gray-500">Inventory, bestsellers, and category performance</p>
                            <div class="mt-3 flex items-center text-sm text-blue-600 font-medium">
                                Analyze products
                                <svg class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-between items-center">
                        <span class="text-xs text-gray-400">Updated: @DateTime.Now.ToString("MMM dd, h:mm tt")</span>
                        <span class="text-xs px-2 py-1 bg-blue-50 text-blue-600 rounded-full">New Features</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Marketing Analytics Card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <a asp-action="MarketingDashboard" class="block group">
                <div class="p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-purple-100 p-4 rounded-xl group-hover:bg-purple-200 transition-colors duration-300">
                            <i class="fas fa-bullhorn text-purple-600 text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-purple-700 transition-colors duration-300">Marketing Analytics</h3>
                            <p class="mt-1 text-sm text-gray-500">Campaign performance and customer acquisition</p>
                            <div class="mt-3 flex items-center text-sm text-purple-600 font-medium">
                                Coming Soon
                                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <span class="text-xs text-gray-400">Launching Q3 2023</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Financial Analytics Card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <a asp-action="FinancialDashboard" class="block group">
                <div class="p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-yellow-100 p-4 rounded-xl group-hover:bg-yellow-200 transition-colors duration-300">
                            <i class="fas fa-chart-line text-yellow-600 text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-yellow-700 transition-colors duration-300">Financial Overview</h3>
                            <p class="mt-1 text-sm text-gray-500">Profitability, expenses, and financial trends</p>
                            <div class="mt-3 flex items-center text-sm text-yellow-600 font-medium">
                                Coming Soon
                                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <span class="text-xs text-gray-400">Launching Q4 2023</span>
                    </div>
                </div>
            </a>
        </div>

        <!-- Custom Reports Card -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <a asp-action="ReportsDashboard" class="block group">
                <div class="p-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-pink-100 p-4 rounded-xl group-hover:bg-pink-200 transition-colors duration-300">
                            <i class="fas fa-sliders-h text-pink-600 text-2xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-bold text-gray-900 group-hover:text-pink-700 transition-colors duration-300">Custom Reports</h3>
                            <p class="mt-1 text-sm text-gray-500">Create tailored analytics for your business needs</p>
                            <div class="mt-3 flex items-center text-sm text-pink-600 font-medium">
                                Request Access
                                <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-gray-100">
                        <span class="text-xs text-gray-400">Contact admin for access</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .group:hover .group-hover\:translate-x-1 {
            transform: translateX(0.25rem);
        }

        .transition-all {
            transition-property: all;
        }

        .duration-300 {
            transition-duration: 300ms;
        }

        /* Custom animation for the icons */
        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .group:hover .fa-users,
        .group:hover .fa-receipt,
        .group:hover .fa-tshirt,
        .group:hover .fa-bullhorn,
        .group:hover .fa-chart-line,
        .group:hover .fa-sliders-h {
            animation: pulse 1s ease-in-out infinite;
        }
    </style>
}